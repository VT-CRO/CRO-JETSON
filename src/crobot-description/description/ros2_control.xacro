<?xml version="1.0"?>
<robot xmlns:xacro="https://www.ros.org/wiki/xacro">

    <xacro:unless value="$(arg sim_mode)">
        <ros2_control name="Crobot" type="system">
            <hardware>
                <plugin>diff_drive_controller/DiffDriveController</plugin>
                
                <param name="front_left_wheel_name">front_left_wheel_joint</param>
                <param name="back_left_wheel_name">back_left_wheel_joint</param>
                <param name="front_right_wheel_name">front_right_wheel_joint</param>
                <param name="back_right_wheel_name">back_right_wheel_joint</param>
                <param name="loop_rate">30</param>
                <param name="dev">/dev/ttyACM0</param>
                <param name="baud_rate">57600</param>
                <param name="timeout">1000</param>
                <param name="enc_counts_per_rev">3450</param>
            </hardware>

            <joint name="front_left_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>

            <joint name="front_right_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>

            <joint name="back_left_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>

            <joint name="back_right_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>
        </ros2_control>
    </xacro:unless>

    <xacro:if value="$(arg sim_mode)">
        <ros2_control name="GazeboSystem" type="system">
            <hardware>
                <plugin>gazebo_ros2_control/GazeboSystem</plugin>
            </hardware>
            <joint name="front_left_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>

            <joint name="front_right_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>

            <joint name="back_left_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>

            <joint name="back_right_wheel_joint">
                <command_interface name="velocity">
                    <param name="min">-10</param>
                    <param name="max">10</param>
                </command_interface>

                <state_interface name="velocity"/>
                <state_interface name="position"/>
            </joint>
        </ros2_control>
    </xacro:if>

    <gazebo>
        <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
            <parameters>$(find crobot-control)/config/ros2_control.yaml</parameters>
            <parameters>$(find crobot-control)/config/gazebo_ros2_control_use_sim.yaml</parameters>
        </plugin>
    </gazebo>
</robot>